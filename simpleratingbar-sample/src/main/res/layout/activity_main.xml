<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.simpleratingbar.MainActivity"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/textRating1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Rating: "
        />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/textRating2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Rating: "
        />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:maxStarSize="45dp"
        app:stepSize="0.5"
        />

    <TextView
        android:id="@+id/textRating3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Rating: "
        />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:borderWidth="8"
        app:maxStarSize="40dp"
        app:borderColor="@color/material_blue500"
        />

    <TextView
        android:id="@+id/textRating4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Rating: "
        />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:backgroundColor="@color/material_blue200"
        app:fillColor="@color/material_blue800"
        app:gravity="right"
        app:borderColor="@color/material_blue500"
        />

    <TextView
        android:id="@+id/textRating5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Rating: "
        />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:fillColor="@color/material_purple300"
        app:numberOfStars="10"
        app:borderColor="@color/material_purple500"
        />

    <TextView
        android:id="@+id/textRating6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Rating: "
        />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:fillColor="@color/material_green300"
        app:numberOfStars="1"
        app:borderColor="@color/material_green500"
        />

  </LinearLayout>

</ScrollView>